{
  "name": "console_interceptor",
  "version": "1.0.3",
  "description": "A utility to intercept console for debugging on remote web applications.",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "electron:build": "electron-builder",
    "electron:pack": "electron-builder --dir",
    "electron:start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generateCerts:windows": "cd cert && genRoot.bat && genKey.bat",
    "transpile": "babel src/inject.js --out-file src/resources/static/inject.js"
  },
  "build": {
    "appId": "ratismal.console_interceptor",
    "extraFiles": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "cert/**/*.bat",
          "cert/**/*.md",
          "cert/**/*.ext"
        ]
      },
      {
        "from": "src/resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "portable",
      "icon": "src/resources/static/icon/icon.ico"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/multer": "^2.0.0",
    "@koa/router": "^8.0.2",
    "catflake": "^1.0.0",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-static": "^5.0.0",
    "koa-websocket": "^6.0.0",
    "multer": "^1.4.2",
    "snekfetch": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "nodemon": "^1.19.3"
  }
}
